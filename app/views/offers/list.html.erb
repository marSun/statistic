<div class="row-fluid">
  <!-- block -->
  <div class="block">
      <div class="navbar navbar-inner block-header">
          <div class="muted pull-left">报价列表</div>
      </div>
      <div class="block-content collapse in">
          <div class="span12">
                          
              <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="offer-list">
                  <thead>
                      <tr>
                          <th>业务员</th>
                          <th>客户</th>
                          <th>物品</th>
                          <th>港口</th>
                          <th>报价</th>
                          <th>修改日期</th>
                          <th>操作</th>
                      </tr>
                  </thead>
                  <tbody>
                    <% @offers.each_with_index do |offer, index| %>
                        <tr class="<%= index.odd? ? "odd" : "even" %> gradeA">
                          <td><%= offer.agent.name %></td>
                          <td><%= offer.client.name %></td>
                          <td><%= offer.goods.name %></td>
                          <td class="center"><%= offer.port.name %></td>
                          <td class="center"><%= offer.price %></td>
                          <td class="center"><%= offer.updated_at %></td>
                          <td class="center">
                            <%= link_to "修改", edit_offer_path(offer), class: "btn btn-danger btn-mini" %>
                            <button class="btn btn-success btn-mini">删除</button>
                          
                          </td>
                        </tr>
                    <% end %>
                  </tbody>
              </table>
              <div class="row" style="margin-left:0px; text-align:center">
                <div class="span12">
                  <%= will_paginate @offers %>
                </div>
              </div>
          </div>
      </div>
  </div>
  <!-- /block -->
</div>

