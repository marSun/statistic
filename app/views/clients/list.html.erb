<div class="row-fluid">
  <!-- block -->
  <div class="block">
      <div class="navbar navbar-inner block-header">
          <div class="muted pull-left">客户列表</div>
      </div>
      <div class="block-content collapse in">
          <div class="span12">
                          
              <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="offer-list">
                  <thead>
                      <tr>
                          <th>客户名称</th>
                          <th>关联业务员</th>
                          <th>操作</th>
                      </tr>
                  </thead>
                  <tbody>
                    <% @clients.each_with_index do |client, index| %>
                        <tr class="<%= index.odd? ? "odd" : "even" %> gradeA">
                          <td><%= client.name %></td>
                          <td><%= client.agent.name %></td>
                          <td class="center">
                            <%= link_to "修改", edit_client_path(client), class: "btn btn-danger btn-mini" %>
                            <button class="btn btn-success btn-mini">删除</button>
                          
                          </td>
                        </tr>
                    <% end %>
                  </tbody>
              </table>
              <div class="row" style="margin-left:0px; text-align:center">
                <div class="span12">
                  <%= will_paginate @clients %>
                </div>
              </div>
          </div>
      </div>
  </div>
  <!-- /block -->
</div>
<script>
  $(function(){
    $("ul.nav.nav-list li").removeClass("active");
    $("#client-submenu").addClass("in");
    $("#client_list").addClass("active");
  });
</script>
