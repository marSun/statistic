<%= javascript_include_tag "orders" %>
<script type="text/javascript" src="/vendors/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="/assets/form-validation.js"></script> 

<!-- validation -->
<div class="row-fluid">
  <!-- block -->
  <div class="block">
    <div class="navbar navbar-inner block-header">
      <div class="muted pull-left">货运报价</div>
    </div>
    <div class="block-content collapse in">
      <div class="span12">
        <!-- BEGIN FORM-->
        <form action="#" id="orders_form" class="form-horizontal">
          <fieldset>
            <div class="alert alert-error hide">
              <button class="close" data-dismiss="alert"></button>
              You have some form errors. Please check below.
            </div>
            <div class="alert alert-success hide">
              <button class="close" data-dismiss="alert"></button>
              Your form validation is successful!
            </div>
              <div class="control-group">
                <label class="control-label">物品<span class="required">*</span></label>
                <div class="controls">
                  <select class="span6 m-wrap" name="category" id="select2">
                    <%= @goodses.each do |goods| %>
                      <option value=<%= goods.id %>><%= goods.name %></option>
                    <% end %>
                  </select>
                </div>
              </div>
              <div class="control-group">
                <label class="control-label">港口<span class="required">*</span></label>
                <div class="controls">
                  <select class="span6 m-wrap" name="category" id="select4">
                    <%= @ports.each do |port| %>
                      <option value=<%= port.id %>><%= port.name %></option>
                    <% end %>
                  </select>
                </div>
              </div>

              <div class="control-group">
                <label class="control-label">海运费<span class="required">*</span></label>
                <div class="controls">
                  <input name="number" type="text" class="span6 m-wrap" id="order_trans_price"/>
                </div>
              </div>
              <div class="control-group">
                <label class="control-label">FOB<span class="required">*</span></label>
                <div class="controls">
                  <input name="number" type="text" class="span6 m-wrap" id="order_fob_price"/>
                </div>
              </div>
              <div class="control-group">
                <label class="control-label">CFR<span class="required">*</span></label>
                <div class="controls">
                  <input name="number" type="text" class="span6 m-wrap" id="order_cfr_price"/>
                </div>
              </div>
              <div class="form-actions" style="background-color: white; border-top: 0">
                <button id="create-order-button" type="button" class="btn btn-primary">创建</button>
              </div>
          </fieldset>
        </form>
        <!-- END FORM-->
        <%= form_tag "/orders", method: :post, id: "order_create_form" do %>
          <%= hidden_field_tag "goods_id" %>
          <%= hidden_field_tag "port_id" %>
          <%= hidden_field_tag "trans_price" %>
          <%= hidden_field_tag "fob_price" %>
          <%= hidden_field_tag "cfr_price" %>
        <% end %>
      </div>
    </div>
  </div>
  <!-- /block -->
</div>
<!-- /validation -->
<script>
  $(function(){
    $("ul.nav.nav-list li").removeClass("active");
    $("#orders-submenu").addClass("in");
    $("#orders_new").addClass("active");
  });

</script>
