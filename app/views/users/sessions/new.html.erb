<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin", id: "login_form"}) do |f| %>
  <h2 class="form-signin-heading">登录</h2>
  <%= f.email_field :email, autofocus: true, class: "input-block-level", placeholder: "邮箱" %>
  <%= f.password_field :password, autocomplete: "off", class: "input-block-level", placeholder: "密码" %>
  <% if devise_mapping.rememberable? -%>
    <label class="checkbox">
      <%= f.check_box :remember_me, value: "remember-me" %> 记住我
    </label>
  <% end -%>
  <%= f.submit "登录", class: "btn btn-large btn-primary" %>
<% end %>
