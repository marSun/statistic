<div class="row-fluid">
  <!-- block -->
  <div class="block">
      <div class="navbar navbar-inner block-header">
          <div class="muted pull-left">用户列表</div>
      </div>
      <div class="block-content collapse in">
          <div class="span12">
                          
              <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="offer-list">
                  <thead>
                      <tr>
                          <th>用户名称</th>
                          <th>邮箱</th>
                          <th>上次登录时间</th>
                          <th>登录次数</th>
                          <th>操作</th>
                      </tr>
                  </thead>
                  <tbody>
                    <% @users.each_with_index do |user, index| %>
                        <tr class="<%= index.odd? ? "odd" : "even" %> gradeA">
                          <td><%= user.name %></td>
                          <td><%= user.email %></td>
                          <td><%= user.last_sign_in_at %></td>
                          <td><%= user.sign_in_count %></td>
                          <td class="center">
                            <button class="btn btn-success btn-mini">删除</button>
                          
                          </td>
                        </tr>
                    <% end %>
                  </tbody>
              </table>
              <div class="row" style="margin-left:0px; text-align:center">
                <div class="span12">
                  <%= will_paginate @users %>
                </div>
              </div>
          </div>
      </div>
  </div>
  <!-- /block -->
</div>
<script>
  $(function(){
    $("ul.nav.nav-list li").removeClass("active");
    $("#user-submenu").addClass("in");
    $("#user_list").addClass("active");
  });
</script>
